{
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:prod": "nodemon -x \"NODE_ENV=production next build && NODE_ENV=production next start\"",
    "build": "next build",
    "start": "next start",
    "lint": "NODE_ENV=production run-p -cls --aggregate-output lint:*",
    "lint:eslint-check": "NODE_ENV=production eslint-config-prettier 'src/**/*.js'",
    "lint:prettier": "NODE_ENV=production prettier -c 'src/**/*.{js,jsx,ts,tsx,json}'",
    "lint:eslint": "NODE_ENV=production eslint src --report-unused-disable-directives --color",
    "lint:tsc": "NODE_ENV=production tsc --noEmit --pretty"
  },
  "nodemonConfig": {
    "ext": "js,jsx,ts,tsx,json,css,scss,svg",
    "watch": [
      "src",
      "next.config.js",
      "fetchlangpacks.js",
      ".env"
    ],
    "ignore": [
      "src/buildtimeData/*.json"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.9",
    "@popmotion/popcorn": "0.4.4",
    "@svgr/webpack": "^6.5.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "axios": "^1.2.2",
    "dayjs": "^1.11.7",
    "flowbite": "^1.6.0",
    "framer-motion": "^8.0.2",
    "mongodb": "^6.1.0",
    "next": "^13.5.3",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dayjs": "^0.3.2",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "sharp": "^0.31.3",
    "swiper": "^10.3.1",
    "vercel": "^28.10.1"
  },
  "devDependencies": {
    "@iconify/react": "^4.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.27",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.23.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.4",
    "tailwindcss-rtl": "^0.9.0",
    "typescript": "^5.2.2"
  }
}
